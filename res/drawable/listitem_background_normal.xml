<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
   <item>  
      <shape android:shape="rectangle">   
         <solid android:color="@color/listitem_border_normal"/>  
         <corners  
            android:topLeftRadius="0dip"  
            android:topRightRadius="0dip"  
            android:bottomLeftRadius="0dip"  
            android:bottomRightRadius="0dip" />  
      </shape>  
   </item>  
   <item android:top="0px" android:bottom="0px" android:left="0px" android:right="0px">  
     <shape>  
        <gradient   
            android:startColor="@color/listitem_background_normal_start" android:endColor="@color/listitem_background_normal_end"   
            android:centerColor="@color/listitem_background_normal_center" 
            android:type="linear" android:angle="90"  
            android:centerX="0.5" android:centerY="0.5" />  
        <corners  
            android:topLeftRadius="0dip"  
            android:topRightRadius="0dip"  
            android:bottomLeftRadius="0dip"  
            android:bottomRightRadius="0dip" />  
      </shape>  
   </item>    
</layer-list>