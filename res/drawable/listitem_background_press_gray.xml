<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/listitem_border_press" />

            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="0dip"
                android:topRightRadius="0dip" />
        </shape>
    </item>
    <item
        android:bottom="0px"
        android:left="0px"
        android:right="0px"
        android:top="0px">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/listitem_background_press_gray_end"
                android:startColor="@color/listitem_background_press_gray_start"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="0dip"
                android:topRightRadius="0dip" />
        </shape>
    </item>

</layer-list>